 <header class="p-3 bg-dark text-white">
    <div class="container">
      <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
       <%= link_to 'APP' ,root_path,class:"d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none" %>
       
       <br/>

        <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
          <li><a href="#" class="nav-link px-2 text-secondary">Home</a></li>
          <li> <%= link_to 'Friends',friends_path, class:"nav-link px-2 text-white"%> </li>
          <% if user_signed_in? %>
               <li><%= link_to 'Sign out', destroy_user_session_path ,method: :delete , class:"nav-link px-2 text-white"%> </li>
          <li> <%= link_to 'About', home_about_path,class:"nav-link px-2 text-white" %> </li>
          <% else %>
          <li><%= link_to 'Sign Up',  new_user_registration_path, class:"nav-link px-2 text-white"%> </li>
          <li><%= link_to 'Sign in',  new_user_session_path, class:"nav-link px-2 text-white"%> </li>
          <% end %>
        </ul>

        <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3">
          <input type="search" class="form-control form-control-dark" placeholder="Search..." aria-label="Search">
        </form>

        <div class="text-end">
          <button type="button" class="btn btn-outline-light me-2">Login</button>
          <button type="button" class="btn btn-warning">Sign-up</button>
        </div>
      </div>
    </div>
  </header>