<p style="color: green"><%= notice %></p>

<h1>Friends</h1>

<div id="friends"  class>
  <% @friends.each do |friend| %>
    <%= render friend %>
    <p>
      <%= link_to "Show this friend", friend,class:"btn btn-primary" %>
    </p>
  <% end %>
</div>

<%= link_to "New friend", new_friend_path ,class:"btn btn-primary"%>
